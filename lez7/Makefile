	$(CPPC)	$^	-o	$(BIN_DIR)/$@	$(CPPFLAGS)

run73:	es73
	$(BIN_DIR)/$^

es74:	src/es_74/main_74.cpp
	$(CPPC)	$^	-o	$(BIN_DIR)/$@	$(CPPFLAGS)

run74:	es74
	$(BIN_DIR)/$^

es75:	src/es_75/main_75.cpp
	$(CPPC)	$^	-o	$(BIN_DIR)/$@	$(CPPFLAGS)

